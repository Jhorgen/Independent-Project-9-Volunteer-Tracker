<div>
  <a href="/project/<%= @volunteer.project_id %>">Back to project</a>

  <h3>Volunteer: <%= @volunteer.name %></h3>
  <br>
  <form action="/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Edit Name</label>
    <input id="name" name="name" type="text" value="<%= @volunteer.name %>">
    <button type="submit">Update volunteer</button>
  </form>

  <form action="/volunteers/<%= @volunteer.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <br><br>
    <button type="submit">Delete Volunteer</button>
  </form>
</div>
